{
  "name": "n8n-nodes-viral-app",
  "version": "0.1.0",
  "description": "n8n node for ViralApp API - Video analytics for TikTok, Instagram, and YouTube",
  "keywords": [
    "n8n-community-node-package",
    "viralapp",
    "analytics",
    "tiktok",
    "instagram",
    "youtube"
  ],
  "license": "MIT",
  "homepage": "https://viral.app",
  "author": {
    "name": "ViralApp",
    "email": "support@viral.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fmd-labs/n8n-nodes-viral-app.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "dev:hot": "concurrently \"tsc --watch\" \"N8N_DEV_RELOAD=true n8n start\"",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ViralAppApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/ViralApp/ViralApp.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^7.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}